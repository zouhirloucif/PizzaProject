{% extends "layout.html.twig" %}

{% block title %}Liste des pizzas{% endblock %}

{% block stylesheets %}
    <style>
    table{
        width:100%;
    }
    th{
        text-align:center;
    }
    </style>
{% endblock %}

{% block body %}

<div class="container text-center ">
<table class="table table-striped">
<thead>
    <tr>
        <th scope="col">Nom de Pizza</th>
        <th scope="col">Description de Pizza</th>
        <th scope="col">Prix de Pizza</th>
        <th scope="col">Ingr√©dients de Pizza</th>
    </tr>
</thead>
<tbody>
{% for pizza in pizzas %}
    <tr>
        <td>{{pizza.getName()}}</td>
        <td>{{pizza.getDescription()}}</td>
        <td>{{pizza.getPrice()}}</td>
        <td>(
            {% for ingre in pizza.getIngredients %}
            {{ingre.name}},
            {% endfor %})
        </td>
    </tr>
{% endfor %}
</tbody>
</table>
<div class="text-center">{{ knp_pagination_render(pizzas) }}</div>
</div>

{% endblock %}